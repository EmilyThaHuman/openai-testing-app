{
  "$schema": "https://mintlify.com/schema.json",
  "name": "ReedAI API Platform",
  "logo": {
    "light": "/images/logo-light.png",
    "dark": "/images/logo-dark.png"
  },
  "favicon": "/images/favicon.png",
  "colors": {
    "primary": "#0099ff",
    "light": "#66c2ff",
    "dark": "#0066cc",
    "anchors": {
      "from": "#0099ff",
      "to": "#66c2ff"
    }
  },
  "topbarLinks": [
    {
      "name": "Dashboard",
      "url": "https://app.reed-ai.dev/dashboard"
    },
    {
      "name": "Support",
      "url": "mailto:support@reed-ai.dev"
    }
  ],
  "topbarCtaButton": {
    "name": "Try API Playground",
    "url": "https://app.reed-ai.dev/open-canvas"
  },
  "tabs": [
    {
      "name": "API Reference",
      "url": "api-reference"
    },
    {
      "name": "Examples",
      "url": "examples"
    }
  ],
  "anchors": [
    {
      "name": "API Reference",
      "icon": "code",
      "url": "api-reference"
    },
    {
      "name": "Examples",
      "icon": "file-code",
      "url": "examples"
    },
    {
      "name": "SDKs",
      "icon": "box",
      "url": "sdks"
    }
  ],
  "navigation": [
    {
      "group": "Getting Started",
      "pages": [
        "introduction",
        "quickstart",
        "authentication",
        "development"
      ]
    },
    {
      "group": "API Reference",
      "pages": [
        "api-reference/overview",
        {
          "group": "Chat",
          "pages": [
            "api-reference/chat/overview",
            "api-reference/chat/create",
            "api-reference/chat/stream",
            "api-reference/chat/functions"
          ]
        },
        {
          "group": "Assistants",
          "pages": [
            "api-reference/assistants/overview",
            "api-reference/assistants/create",
            "api-reference/assistants/threads",
            "api-reference/assistants/messages"
          ]
        },
        {
          "group": "Images",
          "pages": [
            "api-reference/images/overview",
            "api-reference/images/generate",
            "api-reference/images/edit",
            "api-reference/images/variations"
          ]
        },
        {
          "group": "Audio",
          "pages": [
            "api-reference/audio/overview",
            "api-reference/audio/speech",
            "api-reference/audio/transcription"
          ]
        }
      ]
    },
    {
      "group": "Features",
      "pages": [
        "features/open-canvas",
        "features/chat-interface",
        "features/code-editor",
        "features/api-testing"
      ]
    }
  ],
  "footerSocials": {
    "github": "https://github.com/reed-ai/api-platform"
  },
  "analytics": {
    "ga4": {
      "measurementId": "G-XXXXXXXXXX"
    }
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true
  },
  "search": {
    "prompt": "Search documentation..."
  },
  "modeToggle": {
    "default": "dark"
  }
}
